<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/list_item_margin"
    android:layout_marginTop="@dimen/list_item_margin">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/question_title_textinput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:saveEnabled="false"
        app:hintEnabled="false"
        app:layout_constraintEnd_toStartOf="@+id/remove_question"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/question_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/question_title"
            android:inputType="textEmailAddress"
            android:saveEnabled="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/remove_question"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="@dimen/activity_margin"
        android:layout_marginStart="@dimen/activity_margin"
        android:contentDescription="@string/remove_member"
        android:src="@drawable/ic_clear_black_24px"
        app:layout_constraintBottom_toBottomOf="@+id/question_title_textinput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/question_title_textinput"
        app:layout_constraintTop_toTopOf="@+id/question_title_textinput"/>

    <com.wolfbytelab.voteit.ui.editor.SectionView
        android:id="@+id/options"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:childrenLayout="@layout/option_item"
        app:layout_constraintEnd_toEndOf="@+id/remove_question"
        app:layout_constraintStart_toStartOf="@+id/question_title_textinput"
        app:layout_constraintTop_toBottomOf="@+id/question_title_textinput"/>

</android.support.constraint.ConstraintLayout>